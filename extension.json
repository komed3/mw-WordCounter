{
    "name": "WordCounter",
    "version": "0.1.0",
    "author": [
        "[https://komed3.de komed3] (Paul KÃ¶hler)"
    ],
    "url": "https://github.com/komed3/mw-WordCounter",
    "namemsg": "wordcounter",
    "descriptionmsg": "wordcounter-desc",
    "license-name": "MIT",
    "type": "other",
    "requires": {
        "MediaWiki": ">= 1.43.0",
        "platform": {
            "php": ">= 8.0"
        }
    },
    "MessagesDirs": {
        "WordCounter": [
            "i18n"
        ]
    },
    "ExtensionMessagesFiles": {
        "WordCounterAlias": "i18n/WordCounter.alias.php",
        "WordCounterMagic": "i18n/WordCounter.magic.php"
    },
    "config": {
        "WordCounterNamespaces": {
            "value": [ 0 ],
            "description": "List of namespaces for whose pages words are to be counted"
        },
        "WordCounterCountNumbers": {
            "value": false,
            "description": "Whether to count numbers (digits) as words"
        },
        "WordCounterPattern": {
            "value": null,
            "description": "Regular expression pattern to match words; if null, the default pattern is used"
        },
        "WordCounterCountOnPageSave": {
            "value": true,
            "description": "Whether to count words on page save"
        },
        "WordCounterCacheService": {
            "value": "main",
            "description": "Cache service to use; options are 'local', 'wan', 'micro' or 'main'"
        },
        "WordCounterCacheSpecialPages": {
            "value": true,
            "description": "Whether to cache the query results of special pages"
        },
        "WordCounterSpecialPageCacheTTL": {
            "value": 3600,
            "description": "Cache expiry time for special pages in seconds"
        },
        "WordCounterSpecialPageMaxResults": {
            "value": 5000,
            "description": "Maximum number of results to return in special pages"
        },
        "WordCounterJobCountWordsLimit": {
            "value": 50,
            "description": "Number of pages to process per CountWords job (0 to disable jobs)"
        },
        "WordCounterJobPurgeOrphanedLimit": {
            "value": 1000,
            "description": "Number of entries to process per PurgeOrphaned job (0 to disable jobs)"
        }
    },
    "AutoloadNamespaces": {
        "MediaWiki\\Extension\\WordCounter\\": "includes/",
        "MediaWiki\\Extension\\WordCounter\\Api\\": "includes/api/",
        "MediaWiki\\Extension\\WordCounter\\Jobs\\": "includes/jobs/",
        "MediaWiki\\Extension\\WordCounter\\Specials\\": "includes/specials/",
        "MediaWiki\\Extension\\WordCounter\\Tasks\\": "includes/tasks/"
    },
    "HookHandlers": {
        "hooks": {
            "class": "MediaWiki\\Extension\\WordCounter\\Hooks"
        }
    },
    "Hooks": {
        "LoadExtensionSchemaUpdates": "hooks",
        "PageSaveComplete": "hooks",
        "PageDelete": "hooks",
        "ParserFirstCallInit": "hooks",
        "InfoAction": "hooks",
        "SpecialStatsAddExtra": "hooks"
    },
    "SpecialPages": {
        "WordCounterMostWords": "MediaWiki\\Extension\\WordCounter\\Specials\\MostWords"
    },
    "JobClasses": {
        "WordCounterCountWords": "MediaWiki\\Extension\\WordCounter\\Jobs\\CountWordsJob",
        "WordCounterPurgeOrphaned": "MediaWiki\\Extension\\WordCounter\\Jobs\\PurgeOrphanedJob"
    },
    "APIModules": {
        "wordcounter": "MediaWiki\\Extension\\WordCounter\\Api\\WordCounter"
    },
    "manifest_version": 2
}
