{
    "name": "WordCounter",
    "version": "0.1.0",
    "author": [
        "[https://komed3.de komed3] (Paul KÃ¶hler)"
    ],
    "url": "https://github.com/komed3/mw-WordCounter",
    "namemsg": "wordcounter",
    "descriptionmsg": "wordcounter-desc",
    "license-name": "MIT",
    "type": "other",
    "requires": {
        "MediaWiki": ">= 1.43.0"
    },
    "MessagesDirs": {
        "WordCounter": [
            "i18n"
        ]
    },
    "ExtensionMessagesFiles": {
        "WordCounterAlias": "WordCounter.alias.php",
        "WordCounterMagic": "WordCounter.magic.php"
    },
    "config": {
		"WordCounterNamespaces": {
			"value": [ 0 ],
			"description": "List of namespaces for whose pages words are to be counted"
		}
	},
    "AutoloadNamespaces": {
        "MediaWiki\\Extension\\WordCounter\\": "includes/",
        "MediaWiki\\Extension\\WordCounter\\Specials\\": "includes/specials/"
    },
    "HookHandlers": {
        "WordCounterHooks": {
            "class": "MediaWiki\\Extension\\WordCounter\\WordCounterHooks"
        }
    },
    "Hooks": {
        "PageSaveComplete": "WordCounterHooks",
        "PageDelete": "WordCounterHooks",
        "InfoAction": "WordCounterHooks",
        "SpecialStatsAddExtra": "WordCounterHooks",
        "GetMagicVariableIDs": "WordCounterHooks",
        "ParserGetVariableValueSwitch": "WordCounterHooks",
        "LoadExtensionSchemaUpdates": "WordCounterHooks"
    },
    "SpecialPages": {
        "WordCounterPages": "MediaWiki\\Extension\\WordCounter\\Specials\\SpecialWordCounterPages"
    },
    "manifest_version": 2
}
